<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment"
    android:id="@+id/fragment_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:visibility="gone"
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:layout_margin="10dp"
            android:elevation="2dp"
            android:background="#fff300"/>
        <LinearLayout
            android:weightSum="10"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/cir_avatar_home"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@drawable/logo3"/>
            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:id="@+id/edt_search_home"
                android:hint="Search"
                android:layout_weight="7.5"
                android:layout_marginStart="5dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_search"
                android:background="@drawable/border5"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="45dp"/>
            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_tune"/>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="390dp"
                    android:layout_height="120dp" />
                <me.relex.circleindicator.CircleIndicator
                    android:layout_alignBottom="@id/viewpager"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/circle_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center_horizontal"
                    app:ci_drawable="@drawable/circle_radius_selected"
                    app:ci_drawable_unselected="@drawable/circle_radius_unselected"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="6"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#FF5722"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xin chào"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:textColor="#FF5722"
                    android:id="@+id/tv_name_home"
                    android:layout_width="150dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/xinchao"
                    android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textStyle="italic"
                        android:textColor="#FF5722"
                        android:text="Email: "/>
                    <TextView
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textStyle="italic"
                        android:layout_marginStart="1dp"
                        android:textColor="#FF5722"
                        android:id="@+id/tv_email_home"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="nguyenvanchinh@gmail.com"/>
                </LinearLayout>
            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_loai_product"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:elevation="5dp"
            android:text="Danh Sách Sản Phẩm"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_ds_sanpham"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:elevation="5dp"
            android:text="Sản Phẩm Nổi Bật"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_sp_noibat"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Bạn ơi đặt món ngay đi"
            android:textColor="#FF5722"
            android:layout_marginBottom="2dp"
            android:textSize="16sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:background="@drawable/banner1"/>
            <ImageView
                android:layout_marginStart="5dp"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:background="@drawable/banner2"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Thức uống đa dạng cho bạn chọn"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:id="@+id/rcv_sp_douong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="130dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Món ngon Hàn Quốc"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_sp_hanquoc"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Lương về mời bạn ăn mì cay"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_sp_micay"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="370dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/flashs"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Món ăn được yêu thích của quán"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_sp_yeuthich"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="390dp"
            android:layout_height="150dp"
            android:background="@drawable/banner3"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lẩu cùng bạn bè và gia đình"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_sp_lau"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="380dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/kem"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Gợi ý thêm các món ngon tại nhà hàng"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_sp_goiy"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
</ScrollView>