<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:id="@+id/layout_product"
    android:background="@drawable/cart_background"
    android:elevation="3dp">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="180dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dashboard2"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="-1dp"
            android:scaleX="1"
            android:src="@drawable/hot" />

    </RelativeLayout>

    <TextView
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="-8dp"
        android:textStyle="bold"
        android:id="@+id/tv_ten_product"
        android:textColor="@color/blueBook"
        android:textSize="16sp"
        android:text="PC 2021 Asus"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_ngayxb_product"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:text="NXB: 12/09/2023"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toEndOf="@+id/tv_giatien_product"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="VNÄ"
            android:textColor="#FF3D00"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/tv_giatien_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="255.555"
            android:textColor="#FF3D00"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
