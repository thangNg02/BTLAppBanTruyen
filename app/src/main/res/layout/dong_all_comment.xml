<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp">


    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_dong_all_cmt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_user"/>

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/tv_name_dong_all_cmt"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Nguyễn Văn Chính"/>
    </LinearLayout>

    <RatingBar
        android:layout_marginTop="-10dp"
        android:layout_marginStart="-50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_bar_dong_all_cmt"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="3.5"
        android:progressDrawable="@drawable/custom_ratingbar_selector"
        android:scaleX="0.4"
        android:scaleY="0.4" />

    <TextView
        android:id="@+id/tv_noidung_dong_all_cmt"
        android:layout_marginStart="22dp"
        android:layout_marginTop="-10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gà ngon, có mùi đặc sắc. Canh lòng gà cũng ngon, gan gà mịn và tươi. Khẩu phần to đủ ăn"/>

    <View
        android:layout_marginStart="-20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>
</LinearLayout>