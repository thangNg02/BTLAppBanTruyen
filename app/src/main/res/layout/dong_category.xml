<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:id="@+id/layout_category">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/img_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo3"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_ten_category"
            android:layout_marginStart="12dp"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anh Già - Thực phẩm Tươi Sống &amp; Đông Lạnh - Trần Bình"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ajfk"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_money"
                app:tint="#000000"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginStart="2dp"
                android:id="@+id/tv_gia_category"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="40.000"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/ajfk"/>
            <TextView
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="8sp"
                android:text="VNĐ"
                android:textColor="#FF5722"
                android:layout_toEndOf="@+id/tv_gia_category"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/fkldk"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_weight"
                app:tint="#000000" />
            <TextView
                android:id="@+id/tv_trongluong_category"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3B2AB"
                android:text="700"
                android:textSize="10sp"
                android:layout_toEndOf="@+id/fkldk"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
