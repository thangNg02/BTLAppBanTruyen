<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.CommentActivity">


    <ImageView
        android:id="@+id/img_back_cmt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá và nhận xét"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/img_back_cmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginStart="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_rating_total"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <RatingBar
                    android:saveEnabled="false"
                    android:layout_marginTop="-16dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_bar_total"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:rating="3.6"
                    android:progressDrawable="@drawable/custom_ratingbar_selector"
                    android:scaleX="0.4"
                    android:scaleY="0.4" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="-18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_songuoi_danhgia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="22"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" đánh giá"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_marginStart="-50dp"
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:background="@color/colorGray"/>

            <LinearLayout
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5" />

                    <ProgressBar
                        android:id="@+id/progress_bar_five"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="6dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        android:secondaryProgress="80"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="-2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4" />

                    <ProgressBar
                        android:id="@+id/progress_bar_four"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="6dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        android:secondaryProgress="70"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="-2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3" />

                    <ProgressBar
                        android:id="@+id/progress_bar_three"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="6dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        android:secondaryProgress="60"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="-2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2" />

                    <ProgressBar
                        android:id="@+id/progress_bar_two"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="6dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        android:secondaryProgress="50"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="-2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <ProgressBar
                        android:id="@+id/progress_bar_one"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="6dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        android:secondaryProgress="40"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:textColor="#009688"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá từ mọi người"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@drawable/boder2"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_all_cmt"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>